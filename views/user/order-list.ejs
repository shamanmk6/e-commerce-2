<script>
    // Function to show items based on the selected page
    function showPage(pageNumber) {
        const items = document.querySelectorAll('.pagination-item');
        const startIndex = (pageNumber - 1) * 10;
        const endIndex = startIndex + 10;

        items.forEach((item, index) => {
            if (index >= startIndex && index < endIndex) {
                item.style.display = 'table-row'; // or 'block' if using div elements
            } else {
                item.style.display = 'none';
            }
        });
    }

    // Attach click event listeners to pagination links
    document.querySelectorAll('.pagination-link').forEach(link => {
        link.addEventListener('click', function (event) {
            event.preventDefault();
            const pageNumber = parseInt(this.dataset.page);
            showPage(pageNumber);
        });
    });

    // Show the first page initially
    showPage(1);
</script>
