<script>

    document.addEventListener("DOMContentLoaded", function () {
        const searchButton = document.getElementById("search");
        const searchInput = document.getElementById("search-input");
        const productColumns = document.querySelectorAll('.col-lg-3');

        searchButton.addEventListener("click", () => {
            const searchValue = searchInput.value.trim().toUpperCase();

            productColumns.forEach((column) => {
                let found = Array.from(column.querySelectorAll('.card'))
                    .some(product => {
                        let productName = product.querySelector('.product-name');
                        let value = productName.innerText || productName.textContent;
                        return value.toUpperCase().includes(searchValue);
                    });
                 console.log("Found is : ",found);
                column.style.display = found ? "flex" : "none";
            });

            hideSectionsOnSearch();
        });
    });


    document.addEventListener("DOMContentLoaded", function () {
        const categoryButtons = document.querySelectorAll('.category-button');
        const productColumns = document.querySelectorAll('.col-lg-3');

        categoryButtons.forEach((button) => {
            button.addEventListener("click", (event) => {
                event.preventDefault();

                // Get the category value from the data-category attribute
                let selectedCategory = button.getAttribute('data-category');

                console.log("Category is: ", selectedCategory);

                // Loop through product columns and filter products based on category
                productColumns.forEach((column) => {
                    let products = column.querySelectorAll('.card');
                    products.forEach((product) => {
                        let productCategory = product.querySelector('.product-category');
                        let productCategoryValue = productCategory.getAttribute('data-category');
                        console.log("product category value: ", productCategoryValue);

                        if (productCategoryValue === selectedCategory || selectedCategory === 'ALL') {
                            column.style.display = "flex";
                        } else {
                            column.style.display = "none";
                        }
                    });
                });

                hideSectionsOnSearch();
            });
        });
    });


    function hideSectionsOnSearch() {

        hideSectionById("header-carousel");
        hideSectionById("featured");
        hideSectionById("offer");
        hideSectionById("category");
    }

    function hideSectionById(id) {
        let section = document.getElementById(id);
        if (section) {
            section.style.display = "none";
        }
    }
</script>