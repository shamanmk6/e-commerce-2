<body>
    <div class="container">
        <h1>ENTER OTP</h1>
        <% if (typeof errorMessage !=='undefined' ) { %>
            <p style="color: red;">
                <%= errorMessage %>
            </p>
            <% } %>


                <form action="/verify-otp-forgot" method="post" onsubmit="prepareConcatenatedOTP()">
                    <div class="userInput">
                        <input type="text" name="digit1" id="digit1" oninput="moveToNext(this)">
                        <input type="text" name="digit2" id="digit2" oninput="moveToNext(this)">
                        <input type="text" name="digit3" id="digit3" oninput="moveToNext(this)">
                        <input type="text" name="digit4" id="digit4" oninput="moveToNext(this)">
                        <input type="text" name="digit5" id="digit5" oninput="moveToNext(this)">
                        <input type="text" name="digit6" id="digit6" oninput="moveToNext(this)">
                        <input type="hidden" name="otp" id="otp">
                        <input type="hidden" name="userId" value="<%= userId %>">
                        <button type="submit">CONFIRM</button>
                    </div>

                </form>
                <div id="resendContainer">
                    <span id="countdown" style="margin-left: 10px;"></span>
                    <a href="/resend-otp-forgot?userId=<%= userId %>">
                        <h3>Resend OTP</h3>
                    </a>
                </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        console.log("hello");
        function moveToNext(input) {
            var maxLength = parseInt(input.getAttribute("maxlength"));
            var currentIndex = Array.from(input.parentNode.children).indexOf(input);

            if (currentIndex < maxLength - 1) {
                var nextInput = input.parentNode.children[currentIndex + 1];
                nextInput.focus();
            }

            updateHiddenOTP();
        }

        function updateHiddenOTP() {
            var otpFields = document.querySelectorAll('.userInput input[type="text"]');
            var concatenatedOTP = Array.from(otpFields).map(field => field.value).join('');
            document.getElementById('otp').value = concatenatedOTP;
        }

        function prepareConcatenatedOTP() {

            return true;
        }

        var countdown = 60;
        var countdownElement = document.getElementById('countdown');
        var inputFields = document.querySelectorAll('.userInput input[type="text"]');
        var confirmButton = document.querySelector('.userInput button');
        function updateCountdown() {
            countdownElement.innerHTML = countdown + ' seconds';
            if (countdown === 0) {
                countdownElement.innerHTML = 'OTP Expired';
                countdownElement.style.color = 'red';
                inputFields.forEach(function (input) {
                    input.readOnly = true;
                });
                confirmButton.disabled = true;
            } else {
                countdown--;
                setTimeout(updateCountdown, 1000);
            }
        }


        updateCountdown();

    </script>
</body>
