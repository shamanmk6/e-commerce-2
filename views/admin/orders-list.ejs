<div class="content-body">

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <h4 class="card-title">Data Table</h4>

                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered zero-configuration mt-3">
                            <thead>
                                <tr>
                                    <th class="text-center">User</th>
                                    <th class="text-center">Order Date</th>
                                    <th class="text-center">Mobile</th>
                                    <th class="text-center">Delivery Adress</th>
                                    <th class="text-center">Total</th>
                                    <th class="text-center">Status</th>
                                    <th class="text-center">Shipped</th>
                                    <th class="text-center">Delivered</th>
                                    <th class="text-center">Cancel</th>
                                    <th class="text-center">Ordered Items</th>



                                </tr>
                            </thead>
                            <tbody>
                                <% orders.forEach(function(order){ %>
                                    <tr>
                                        <td>
                                            <%= order.userName%>
                                        </td>
                                        <td>
                                            <%= moment(order.date).format('MMM Do YY') %>
                                        </td>
                                        <td>
                                            <%= order.deliveryDetails.mobile %>
                                        </td>
                                        <td>
                                            <strong>Name:</strong> <%= order.deliveryDetails.name %><br>
                                            <strong>Delivery Address:</strong><%= order.deliveryDetails.address %><br>
                                            <strong> Pincode:</strong><%= order.deliveryDetails.pincode %><br>
                                            <strong> Mobile:</strong><%= order.deliveryDetails.mobile %><br>
                                        </td>
                                        <td>
                                            â‚¹<%= order.totalAmount %>.00
                                        </td>
                                        <td class="<%= order.status === 'Delivered' ? 'text-success' : (order.status === 'Shipped' ? 'text-warning' : (order.status === 'Cancelled' ? 'text-danger' : '')) %>">
                                            <%= order.status %>
                                        </td>
                                        
                                        <td>
                                            <a href="/admin/shipped-order/<%= order._id %>">
                                                <button type="button" class="btn btn-success">Shipped</button>
                                            </a>
                                        </td>
                                        <td>
                                            <a href="/admin/delivered-order/<%= order._id %>">
                                                <button type="button" class="btn btn-success">Delivered</button>
                                            </a>
                                        </td>
                                        <td>
                                            <a href="/admin/cancel-order/<%= order._id %>">
                                                <button type="button" class="btn btn-success">Cancel</button>
                                            </a>
                                        </td>
                                        <td>
                                            <a href="/admin/ordered-items/<%= order._id %>">
                                                <button type="button" class="btn btn-primary">Ordered Items</button>
                                            </a>
                                        </td>


                                    </tr>
                                    <% }) %>

                            </tbody>
                         </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>