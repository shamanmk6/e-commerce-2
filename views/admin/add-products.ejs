<div class="content-body">

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 ">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Add Products</h4>
                        <div class="basic-form">
                            <form action="/admin/add-products" enctype="multipart/form-data" method="post">

                                <div class="form-group col-md-6">
                                    <label>Name</label>
                                    <input type="text" name="name" class="form-control" placeholder="Name">
                                </div>

                                <div class="form-group col-md-6">
                                    <label>Price</label>
                                    <input type="text" name="price" class="form-control" placeholder="Price">
                                </div>

                                <div class="form-group col-md-6">
                                    <label>Category</label>
                                    <select name="category">
                                        <% categories.forEach(function(category){ %>
                                            <option value="<%= category.category %>" selected>
                                                <%= category.category %>
                                            </option>
                                            <% }) %>
                                    </select>
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Quantity</label>
                                    <input type="number" name="quantity" class="form-control" placeholder="Quantity">
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Offer</label>
                                    <input type="number" name="offer" class="form-control" placeholder="Offer">
                                    <label>Offer Starting</label>
                                    <input type="date" name="offerStart" class="form-control" placeholder="offer Starting Date">
                                    <label>Offer Starting</label>
                                    <input type="date" name="offerEnd" class="form-control" placeholder="offer Ending Date">
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Description</label>
                                    <input type="text" name="description" class="form-control"
                                        placeholder="Description">
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Image</label>
                                    <input type="file" name="image" class="form-control" multiple />

                                </div>

                                <button type="submit" class="btn btn-dark">ADD</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>